<%= link_to taste_path(taste.id) do %>
   <div class='taste-img-content'>
      <%= image_tag taste.image.variant(resize: '500x500'), class: "taste-img" if taste.image.attached? %>
   </div>
   <div class='taste-info'>
      <h3 class='taste-name'>
          <%= taste.title %>
      </h3>
      <div class='taste-example'>
          <span>オススメは<%= taste.genre.name %>♪</span>
      </div>
   </div>
   <%# いいね機能の表示 %>
   <% if current_user.liked_by?(taste.id) %>
      <td>
        <%= link_to destroy_like_path(taste), class: "like-link", method: :DELETE, remote: true do %>
          <i class="fa fa-heart unlike-btn fa-2x"></i>
        <% end %>
        <div class="likes-count"><%= taste.likes.count %></div>
      </td>
   <% else %>
      <td>
        <%= link_to create_like_path(taste), class: "like-link", method: :POST, remote: true do %>
          <i class="far fa-thumbs-up fa-2x"></i>
        <% end %>
        <div class="likes-count"><%= taste.likes.count %></div>
      </td> 
   <% end %>
   <%# いいね機能の表示 %>
<% end %>